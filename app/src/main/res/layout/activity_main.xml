                    android:minHeight="32dp"
                    android:text="6 BB" />

                <RadioButton
                    android:id="@+id/rb5bb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="32dp"
                    android:text="5 BB" />

                <RadioButton
                    android:id="@+id/rb4bb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="32dp"
                    android:text="4 BB" />

                <RadioButton
                    android:id="@+id/rb3bb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="32dp"
                    android:text="3 BB" />

                <RadioButton
                    android:id="@+id/rb2bb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="32dp"
                    android:text="2 BB" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.myapplication5.ui.main.MyView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DFDFDF" />
        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>